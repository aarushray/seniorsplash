
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only allow users to read their own data and basic target info
    match /players/{userId} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         resource.data.isInGame == true); // Only public game data
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Restrict sensitive admin data
    match /admin/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/players/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}